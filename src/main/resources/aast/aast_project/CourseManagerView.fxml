<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.web.WebView?>
<?import java.time.LocalDate?>

<SplitPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="aast.aast_project.controllers.CourseManagerController"
           dividerPositions="0.4" prefHeight="850.0" prefWidth="1500.0"
           style="-fx-font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">

    <VBox spacing="15.0" alignment="TOP_CENTER">
        <padding>
            <Insets top="25.0" right="20.0" bottom="20.0" left="25.0" />
        </padding>

        <Label text="ðŸ“š Course Administration" style="-fx-font-size: 24pt; -fx-font-weight: bold; -fx-text-fill: #1976D2;"/>

        <TitledPane text="Course List" collapsible="false" VBox.vgrow="ALWAYS" style="-fx-border-color: #DDD; -fx-border-radius: 5; -fx-background-color: #F8F8F8;">
            <TableView fx:id="courseTable" VBox.vgrow="ALWAYS" minHeight="200.0">
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                <columns>
                    <TableColumn fx:id="idColumn" text="DB ID" prefWidth="50.0"/>
                    <TableColumn fx:id="courseIdStringColumn" text="Code" prefWidth="80.0"/>
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="150.0"/>
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="250.0"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150.0"/>
                </columns>
            </TableView>
        </TitledPane>


        <TitledPane text="Course Details" collapsible="false" style="-fx-border-color: #DDD; -fx-border-radius: 5;">
            <GridPane hgap="15" vgap="15" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="70"/>
                </columnConstraints>
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/> </padding>

                <Label text="Course Code:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="courseIdStringField" promptText="e.g., CS101" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Course Name:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="courseNameField" promptText="e.g., Introduction to Programming" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextArea fx:id="descriptionArea" prefRowCount="3" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <HBox spacing="10" alignment="CENTER_LEFT" GridPane.rowIndex="3" GridPane.columnIndex="1">
                    <Button fx:id="saveButton" text="ðŸ’¾ Save Course" onAction="#handleSaveCourse" style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    <Button fx:id="clearButton" text="ðŸ§¹ Clear Form" onAction="#handleClearForm"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="backButton" text="&lt; Back to Dashboard" onAction="#handleBackToDashboard" style="-fx-background-color: #FF4081; -fx-text-fill: white;"/>
                </HBox>
            </GridPane>
        </TitledPane>
    </VBox>

    <VBox fx:id="lessonManagerPane" spacing="15.0" alignment="TOP_CENTER" visible="false">
        <padding>
            <Insets top="25.0" right="25.0" bottom="20.0" left="20.0" />
        </padding>

        <Label fx:id="lessonHeaderLabel" text="Lessons for [Selected Course]" style="-fx-font-size: 24pt; -fx-font-weight: bold; -fx-text-fill: #0288D1;"/>

        <TableView fx:id="lessonTable" VBox.vgrow="ALWAYS">
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            <columns>
                <TableColumn fx:id="lessonIdColumn" text="ID" prefWidth="40.0"/>
                <TableColumn fx:id="lessonOrderColumn" text="Order" prefWidth="60.0"/>
                <TableColumn fx:id="lessonTitleColumn" text="Title" prefWidth="180.0"/>
                <TableColumn fx:id="lessonContentColumn" text="Type" prefWidth="100.0"/>
                <TableColumn fx:id="lessonActionsColumn" text="Actions" prefWidth="100.0"/>
            </columns>
        </TableView>

        <TabPane prefHeight="350.0" tabClosingPolicy="UNAVAILABLE">

            <Tab text="âœï¸ Core Details">
                <GridPane hgap="15" vgap="15">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/> </padding>
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="75"/>
                    </columnConstraints>

                    <Label text="Lesson Title:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="lessonTitleField" promptText="e.g., Chapter 1 Introduction" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Order (Sequence):" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="lessonOrderField" promptText="e.g., 1" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>
            </Tab>

            <Tab text="ðŸŽ¥ Lecture (Video/Notes)">
                <VBox spacing="10.0">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/> </padding>
                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="75"/>
                        </columnConstraints>

                        <Label text="Lecture Title:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="lectureTitleField" promptText="e.g., Welcome Video" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Video/File URL:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="lectureUrlField" promptText="Paste YouTube or public video URL here..." GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    </GridPane>

                    <TitledPane text="Video Preview (Paste URL Above)" collapsible="false" VBox.vgrow="ALWAYS">
                        <VBox alignment="CENTER" prefHeight="200.0" VBox.vgrow="ALWAYS">
                            <WebView fx:id="lectureWebView" VBox.vgrow="ALWAYS" minHeight="200.0" />
                        </VBox>
                    </TitledPane>

                    <TitledPane text="Notes/Text Content" collapsible="true" expanded="false">
                        <TextArea fx:id="lectureNotesArea" prefRowCount="3" promptText="Detailed notes or text content..." />
                    </TitledPane>
                </VBox>
            </Tab>

            <Tab text="ðŸ“ Assignment">
                <GridPane hgap="15" vgap="15">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/> </padding>
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="75"/>
                    </columnConstraints>

                    <Label text="Assignment Title:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="assignmentTitleField" promptText="e.g., Final Project Submission" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Due Date:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <DatePicker fx:id="assignmentDueDate" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Max Grade:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="assignmentMaxGradeField" promptText="e.g., 100" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Description:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <TextArea fx:id="assignmentDescriptionArea" prefRowCount="3" promptText="Task description..." GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>
            </Tab>

            <Tab text="â“ Quiz">
                <VBox spacing="15.0">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/> </padding>

                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="75"/>
                        </columnConstraints>

                        <Label text="Quiz Title:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="quizTitleField" promptText="Set via 'Edit Questions' button" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Passing Score (%):" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="quizPassingScoreField" promptText="Set via 'Edit Questions' button" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    </GridPane>

                    <Button fx:id="editQuizQuestionsButton" text="ðŸ“ Manage Quiz Questions" onAction="#handleEditQuizQuestions" maxWidth="1.7976931348623157E308" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;"/>

                    <Label text="Note: Click the button above to define questions. Title and Score will update here upon finalizing."
                           wrapText="true" style="-fx-font-style: italic; -fx-font-size: 10pt;"/>
                </VBox>
            </Tab>
        </TabPane>


        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding><Insets top="5" right="10" bottom="0" left="0" /></padding>
            <Button fx:id="lessonSaveButton" text="âœ… Save Lesson and Content" onAction="#handleSaveLesson" style="-fx-background-color: #00BCD4; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="âŒ Clear Lesson Form" onAction="#handleClearLessonForm"/>
        </HBox>

    </VBox>
</SplitPane>